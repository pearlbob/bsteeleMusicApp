<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-GWT Devmode</actionName>
            <displayName>Devmode</displayName>
            <goals>
                <goal>gwt:devmode</goal>
            </goals>
            <properties>
                <gwt.logLevel>INFO</gwt.logLevel>
                <gwt.style>DETAILED</gwt.style>
                <runTarget>index.html</runTarget>
                <jpda.listen>maven</jpda.listen>
                
            </properties>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <gwt.logLevel>INFO</gwt.logLevel>
                <gwt.style>DETAILED</gwt.style>
            </properties>
        </action>
        <action>
            <actionName>build</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <gwt.logLevel>INFO</gwt.logLevel>
                <gwt.style>DETAILED</gwt.style>
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>war</packaging>
                <packaging>ear</packaging>
                <packaging>ejb</packaging>
            </packagings>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <gwt.logLevel>INFO</gwt.logLevel>
                <gwt.style>DETAILED</gwt.style>
            </properties>
        </action>
        
        
    </actions>
