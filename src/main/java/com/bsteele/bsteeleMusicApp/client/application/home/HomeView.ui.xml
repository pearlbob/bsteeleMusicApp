<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:RootLayoutPanel>
        <g:layer>
            <g:DockLayoutPanel unit='PX'>
                <g:north size='35'>
                    <g:HTMLPanel>
                        <h1> 
                            <img src="images/runningsmall.ico" alt="Bob Steele jpg" border="0"
                                 height="28" width="28"/> 
                            bsteele Music App
                        </h1>
                    </g:HTMLPanel>
                </g:north>
                <g:center size='350' height='200'>
                    <g:TabLayoutPanel barUnit='EM' barHeight='2.5' >
                        <g:tab>
                            <g:header size='7'>Songs</g:header>
                            <g:ResizeLayoutPanel>
                                <g:HTMLPanel>   
                                    <iframe src="http://www.bsteele.com/bsteeleMusicApp/lyrics.html"></iframe>
                                </g:HTMLPanel>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                        <g:tab>
                            <g:header size='7'>Chords</g:header>
                            <g:Label>chords</g:Label>
                        </g:tab>
                        <g:tab>
                            <g:header size='7'>Options</g:header>
                            <g:FlowPanel>   
                                <g:HTMLPanel>
                                    <paper-icon-item ui:field="menuClearAll">
                                        <iron-icon icon="delete" item-icon=""/>
                                        <div>Clear All</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuClearDone">
                                        <iron-icon icon="clear" item-icon=""/>
                                        <div>Clear Done</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuSettings">
                                        <iron-icon icon="settings" item-icon=""/>
                                        <div>Settings</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuAbout">
                                        <iron-icon icon="help" item-icon=""/>
                                        <div>About</div>
                                    </paper-icon-item>
                                </g:HTMLPanel>
                            </g:FlowPanel>
                        </g:tab>
                        <g:tab>
                            <g:header size='7'>Bass Study</g:header>
                            <g:ResizeLayoutPanel>
                                <g:HTMLPanel>   
                                    <iframe src="http://www.bsteele.com/bsteeleMusicApp/bassStudyTool.html"></iframe>
                                </g:HTMLPanel>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                    </g:TabLayoutPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:layer>
    </g:RootLayoutPanel>
</ui:UiBinder>
