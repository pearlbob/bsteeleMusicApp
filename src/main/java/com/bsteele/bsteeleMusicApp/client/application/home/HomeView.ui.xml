<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.bsteele.bsteeleMusicApp.client.widgets'
>

    <g:RootLayoutPanel>
        <g:layer>
            <g:DockLayoutPanel unit='PX'>
                <g:north size='30'>
                    <my:AppTitleWidget/>
                </g:north>
                <g:center size='350' height='200'>
                    <g:TabLayoutPanel ui:field="homeTabs" barUnit='EM' barHeight='2.5'>
                        <g:tab>
                            <g:header size='3'>Songs</g:header>
                            <g:SimpleLayoutPanel ui:field="songList"/>
                        </g:tab>
                        <g:tab>
                            <g:header size='3'>Lyrics &amp; Chords</g:header>
                            <g:ResizeLayoutPanel>
                                <g:SplitLayoutPanel ui:field="lyricsAndChords"/>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                        <g:tab>
                            <g:header size='3'>Edit</g:header>
                            <g:ResizeLayoutPanel>
                                <g:ScrollPanel>
                                    <g:SimplePanel ui:field="songEdit"/>
                                </g:ScrollPanel>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                        <g:tab>
                            <g:header size='3'>Player</g:header>
                            <g:ResizeLayoutPanel>
                                <g:DockLayoutPanel ui:field="player"/>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                        <g:tab>
                            <g:header size='3'>Singer</g:header>
                            <g:ResizeLayoutPanel>
                                <g:DockLayoutPanel ui:field="singer"/>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                        <g:tab>
                            <g:header size='3'>Drums</g:header>
                            <g:SimplePanel ui:field="drumOptions"/>
                        </g:tab>
                        <!--<g:tab>-->
                        <!--<g:header size='3'>Bass Study</g:header>-->
                        <!--<g:ResizeLayoutPanel>-->
                        <!--<g:HTMLPanel>-->
                        <!--stuff goes here-->
                        <!--</g:HTMLPanel>-->
                        <!--</g:ResizeLayoutPanel>-->
                        <!--</g:tab>-->
                        <g:tab>
                            <g:header size='3'>Options</g:header>
                            <g:ScrollPanel>
                                <g:HTMLPanel>
                                    <paper-icon-item ui:field="menuClearAll">
                                        <iron-icon icon="delete" item-icon=""/>
                                        <div>Clear All</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuClearDone">
                                        <iron-icon icon="clear" item-icon=""/>
                                        <div>Clear Done</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuSettings">
                                        <iron-icon icon="settings" item-icon=""/>
                                        <div>Settings</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuAbout">
                                        <iron-icon icon="help" item-icon=""/>
                                        <div>About</div>
                                    </paper-icon-item>
                                    <g:Tree ui:field="optionTree">
                                        <g:TreeItem text="Display">
                                            <g:CheckBox ui:field="countIn" text="Count-In" checked="true"/>
                                            <g:CheckBox ui:field="alwaysCount" text="Always Count"/>
                                            <g:CheckBox ui:field="flashOn1" text="Flash on beat one"/>
                                        </g:TreeItem>
                                    </g:Tree>
                                    <br/>
                                    <g:Button ui:field="showAllScales">Show all scales</g:Button>
                                    <g:HTML ui:field="allScales"/>
                                    <br/>
                                    <g:Button ui:field="showAllChords">Show all chords</g:Button>
                                    <g:HTML ui:field="allChords"/>
                                    <br/>
                                    <g:Button ui:field="showStatus">Show Status</g:Button>
                                    <g:HTML ui:field="allStatus"/>
                                    <p>
                                    buildId:
                                    <g:Label ui:field="buildId"/>
                                    </p>
                                    <p>
                                    allSongId:
                                    <g:Label ui:field="allSongId"/>
                                    <g:Button ui:field="writeAllSongs">Write All Songs</g:Button>
                                    </p>
                                </g:HTMLPanel>

                            </g:ScrollPanel>
                        </g:tab>
                    </g:TabLayoutPanel>

                </g:center>
            </g:DockLayoutPanel>
        </g:layer>
    </g:RootLayoutPanel>
</ui:UiBinder>
