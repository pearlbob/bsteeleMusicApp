<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.bsteele.bsteeleMusicApp.client.widgets'
             xmlns:songs='urn:import:com.bsteele.bsteeleMusicApp.client.application.songs'
>

    <g:RootLayoutPanel >
        <g:layer>
            <g:DockLayoutPanel unit='PX'>
                <g:north size='30' >
                    <my:AppTitleWidget />
                </g:north>
                <g:center size='350' height='200'>
                    <g:TabLayoutPanel ui:field="homeTabs" barUnit='EM' barHeight='2.5' >
                        <!--                        <g:tab>
                            <g:header size='7'>TESTING ONLY</g:header>
                            <g:ResizeLayoutPanel>
                                <g:Frame url="./"/>
                            </g:ResizeLayoutPanel>
                        </g:tab>-->
                        <g:tab>
                            <g:header size='3'>Songs</g:header>
                            <g:ResizeLayoutPanel>
                                <g:ScrollPanel>
                                    <g:SimplePanel ui:field="songList" />
                                </g:ScrollPanel>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                        <g:tab ui:field="lyricsAndChordsTab">
                            <g:header size='3'>Lyrics &amp; Chords</g:header>
                            <g:ResizeLayoutPanel>
                                <g:SplitLayoutPanel ui:field="lyricsAndChords" />
                            </g:ResizeLayoutPanel>
                        </g:tab>
                        <g:tab ui:field="EditTab">
                            <g:header size='3'>Edit</g:header>
                            <g:ResizeLayoutPanel>
                                <g:ScrollPanel>
                                    <g:SimplePanel ui:field="songEdit" />
                                </g:ScrollPanel>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                        <g:tab>
                            <g:header size='3'>Options</g:header>
                            <g:FlowPanel>   
                                <g:HTMLPanel>
                                    <paper-icon-item ui:field="menuClearAll">
                                        <iron-icon icon="delete" item-icon=""/>
                                        <div>Clear All</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuClearDone">
                                        <iron-icon icon="clear" item-icon=""/>
                                        <div>Clear Done</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuSettings">
                                        <iron-icon icon="settings" item-icon=""/>
                                        <div>Settings</div>
                                    </paper-icon-item>
                                    <paper-icon-item ui:field="menuAbout">
                                        <iron-icon icon="help" item-icon=""/>
                                        <div>About</div>
                                    </paper-icon-item>
                                </g:HTMLPanel>
                            </g:FlowPanel>
                        </g:tab>
                        <g:tab>
                            <g:header size='3'>Bass Study</g:header>
                            <g:ResizeLayoutPanel>
                                <g:HTMLPanel>   
                                    <iframe src="http://www.bsteele.com/bsteeleMusicApp/bassStudyTool.html"></iframe>
                                </g:HTMLPanel>
                            </g:ResizeLayoutPanel>
                        </g:tab>
                    </g:TabLayoutPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:layer>
    </g:RootLayoutPanel>
</ui:UiBinder>
