<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.bsteele.bsteeleMusicApp.client.widgets'
>
    <g:HTMLPanel>
        <my:AppTitleWidget/>
        <table>
            <tr>
                <td>
                    Login:
                </td>
                <td>
                    <g:TextBox ui:field="username">guest</g:TextBox>
                </td>
            </tr>
            <tr>
                <td>
                    Password:
                </td>
                <td>
                    <!--requires ssh!   <g:PasswordTextBox ui:field="password"/> -->
                    <g:TextBox ui:field="password"/>
                </td>
            </tr>
        </table>
        <p>
            No password currently required, just click login.
        </p>
        <p>By logging in, you are giving app permission to play
            audio output on your device.
        </p>
        <p>
            <g:Button ui:field="confirm" text="Login"/>
        </p>

    </g:HTMLPanel>
</ui:UiBinder>
