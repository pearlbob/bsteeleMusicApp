<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:SplitLayoutPanel >
        <g:north size='50' > 
            <g:FlowPanel >
                <g:Label ui:field="title"></g:Label>
            </g:FlowPanel>
        </g:north>
        <g:west size='500' > 
            <g:HTMLPanel ui:field="chords"/>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <g:HTMLPanel ui:field="lyrics"/>
            </g:ScrollPanel>
        </g:center>
    </g:SplitLayoutPanel>

</ui:UiBinder>